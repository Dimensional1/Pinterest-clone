<% include ./partials/header.ejs %>

    <div class="profile w-full min-h-screen bg-zinc-800 pt-1">
        <form hidden id="upload-form" action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="prof_details  text-white  flex flex-col items-center justify-center mt-20 ">
            <div class="relative">
                <span id="uploadicon"
                    class="w-8 h-8 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-200">
                    <i class="ri-pencil-line text-zinc-800"></i>
                </span>

                <div class="w-32 h-32 bg-zinc-200 rounded-full overflow-hidden">

                    <img class="h-full w-full object-cover" alt="display-image"
                        src="/images/uploads/<%= user.profileImage %>">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5"><%=user.username %></h1>
            <h3 class="text-md">@<%= user.username %></h3>
            <a href="/edit" class="px-7 mt-5 py-3 bg-zinc-200 rounded-full text-md font-semibold">Edit</a>
            <a href="/add" class="px-8 py-2 rounded-lg bg-red-700 mt-4 text-xs font-semibold">Add New Post</a>

        </div>
        <div class="cards flex flex-wrap gap-10 px-10 mt-10 text-white">
            <div class="card">
                <div class="w-52 rounded-md h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img src="/images/uploads/<%= user?.posts[0]?.image %>" class="w-full h-full object-cover" alt="">
                </div>
                <a href="/show/posts" class="inline-block text-xl font-semibold mt-5"> Your uploaded Pins</a>
                <h5 class="text-sm font-medium">
                    <%= user.posts.length %>
                </h5>
            </div>


        </div>

    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#upload-form input").click()
        })
        document.querySelector("#upload-form input").addEventListener("change", function () {
            document.querySelector("#upload-form").submit();
        })
    </script>

    <% include ./partials/footer.ejs %>